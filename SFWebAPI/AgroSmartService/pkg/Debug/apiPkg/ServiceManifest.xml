  <ConfigPackage Name="Config" Version="3.4.0" />
  <Resources>
    <Endpoints>
      <Endpoint Protocol="http" Name="ServiceEndPoint" Type="Input" Port="9000" />
    </Endpoints>
  </Resources>
</ServiceManifest>