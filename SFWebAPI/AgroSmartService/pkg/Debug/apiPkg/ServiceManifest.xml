      </ExeHost>
    </EntryPoint>
    <EnvironmentVariables>
      <EnvironmentVariable Name="ASPNETCORE_ENVIRONMENT" Value="" />
    </EnvironmentVariables>
  </CodePackage>
  <!-- Config package is the contents of the Config directoy under PackageRoot that contains an 
